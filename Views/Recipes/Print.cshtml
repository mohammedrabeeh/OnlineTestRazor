@model WebApplication1.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

@{
    Layout = null;
}



<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<div class="container">
    <main role="main" class="pb-3">
        <h1>Details</h1>

        <div>
            <h4>Recipe</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RecipeTitle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RecipeTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image1)
                </dt>
                <dd class="col-sm-10">
                    <img src="/uploads/@Html.DisplayFor(model => model.Image1)" alt="" style="width:200px;height:200px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image2)
                </dt>
                <dd class="col-sm-10">
                    <img src="/uploads/@Html.DisplayFor(model => model.Image2)" alt="" style="width:200px;height:200px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image3)
                </dt>
                <dd class="col-sm-10">
                    <img src="/uploads/@Html.DisplayFor(model => model.Image3)" alt="" style="width:200px;height:200px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateAdded)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateAdded)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Level)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Level.LevelId)
                </dd>
            </dl>
        </div>

    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
